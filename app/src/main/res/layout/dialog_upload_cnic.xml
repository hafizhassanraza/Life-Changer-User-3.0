<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">





    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_m"

            android:orientation="vertical">

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/SecondaryVariant"/>

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Investor CNIC Photo !"
                android:textColor="@color/black_m"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tvHeaderDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/SecondaryVariant"
                android:layout_marginHorizontal="20dp"
                android:text="Upload both (Front and Back) side photo of your CNIC" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/SecondaryVariant"
                        android:layout_gravity="center_horizontal"
                        android:text="Front Side"/>

                    <ImageView
                        android:id="@+id/imgSelectCnicFront"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/check_dark"/>



                    <TextView
                        android:id="@+id/tvSelectCnicFront"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/bg_button_hollow_dark"
                        android:text="@string/upload"
                        android:padding="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black_m"
                        android:layout_alignParentRight="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/SecondaryVariant"
                        android:layout_gravity="center_horizontal"
                        android:text="Back Side "/>

                    <ImageView
                        android:id="@+id/imgSelectCnicBack"
                        android:layout_width="110dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/check_dark"/>
                    <TextView
                        android:id="@+id/tvSelectCnicBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/bg_button_hollow_dark"
                        android:text="@string/upload"
                        android:padding="10dp"
                        android:layout_gravity="center_horizontal"

                        android:layout_alignParentRight="true" />

                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btnUploadCNIC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/bg_button"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/primary"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:drawableTint="@color/white"
                android:text="Upload" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>