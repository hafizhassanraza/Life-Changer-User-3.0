<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_m"

            android:orientation="vertical">

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/SecondaryVariant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:text="Do you want to send Investment "
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="request with follwing credential"
                android:textColor="@color/primary"
                android:layout_gravity="center"
                 android:textStyle="bold" />
            <View
                android:layout_width="220dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/SecondaryVariant" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:text="Sender Account!"
                android:textColor="@color/primary"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvsender_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Askri Bank"
                android:textColor="@color/SecondaryVariant" />

            <TextView
                android:id="@+id/tvsender_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="4774374"
                android:textColor="@color/SecondaryVariant" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Receiver Account!"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvreceiver_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Askri Bank"
                android:textColor="@color/SecondaryVariant" />

            <TextView
                android:id="@+id/tvreceiver_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="4774374"
                android:textColor="@color/SecondaryVariant" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Amount!"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="4774374"
                android:textColor="@color/SecondaryVariant" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/bg_button"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/primary"
                    android:drawableTint="@color/white"
                    android:text="Cencel" />
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/bg_button"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="18dp"
                    android:textSize="12dp"
                    android:backgroundTint="@color/primary"
                    android:drawableTint="@color/white"
                    android:text="Send" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>