<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_m"

            android:orientation="vertical">

            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/SecondaryVariant"/>

            <TextView
                android:id="@+id/tvHeaderBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Address"
                android:textColor="@color/black_m"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvHeaderBankDisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/SecondaryVariant"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:text="Update Address from here"/>



            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="-------"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"

                android:background="@drawable/bg_edittext"
                android:layout_marginHorizontal="20dp"/>






            <Button
                android:id="@+id/updateAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/bg_button"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/primary"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:drawableTint="@color/white"
                android:text="Update" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>